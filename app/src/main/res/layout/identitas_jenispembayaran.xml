<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jenis Pembayaran"
        android:textColorHint="@color/colorAccent"
        app:theme="@style/AppTheme.Spinner"
        android:id="@+id/jenisPembayaran"
        app:met_floatingLabel="normal"
        android:layout_margin="12dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/namaPenjamin"
            android:layout_gravity="center_horizontal"
            android:hint="Nama Penjamin"
            android:elegantTextHeight="false"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Apakah pernah berkunjung ke RS PMI Bogor sebelumnya ?"
        android:layout_marginLeft="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/typePasien"
        android:gravity="center">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lakiLaki"
            android:text="Ya"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="50dp"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/perempuan"
            android:text="Tidak"
            android:layout_alignParentRight="true" />

    </RadioGroup>

    </RelativeLayout>


</LinearLayout>