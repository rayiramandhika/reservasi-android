<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    style="@style/AppTheme.AddPasien">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noID"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:hint="No. NIK/KTP/SIM/ID *"
                android:elegantTextHeight="false"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Apakah pernah berkunjung ke RS PMI Bogor sebelumnya ? *"
            android:layout_marginLeft="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/typePasien"
                android:gravity="center">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lama"
                    android:text="Ya"
                    android:layout_gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="50dp"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/baru"
                    android:text="Tidak"
                    android:layout_alignParentRight="true" />

            </RadioGroup>

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtLayoutNoRekamMedik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/noRekamMedik"
                android:layout_gravity="center_horizontal"
                android:hint="No. Rekam Medik (Jika ada)"
                android:elegantTextHeight="false"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nama"
            android:layout_gravity="center_horizontal"
            android:hint="Nama Lengkap *"
            android:elegantTextHeight="false"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tempatLahir"
            android:layout_gravity="center_horizontal"
            android:hint="Tempat Lahir *"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir *"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp">

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tanggal "
            android:textColorHint="@color/colorAccent"
            app:theme="@style/AppTheme.Spinner"
            android:id="@+id/tanggalLahir"
            app:met_floatingLabel="normal"
            android:layout_marginRight="4dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:gravity="left"
            android:layout_marginTop="14dp"
            android:layout_weight="1" />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Bulan"
            android:textColorHint="@color/colorAccent"
            app:theme="@style/AppTheme.Spinner"
            android:id="@+id/bulanLahir"
            app:met_floatingLabel="normal"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="2" />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tahun"
            android:textColorHint="@color/colorAccent"
            app:theme="@style/AppTheme.Spinner"
            android:id="@+id/tahunLahir"
            app:met_floatingLabel="normal"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="false"
            android:layout_marginTop="14dp"
            android:layout_weight="2" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Jenis Kelamin *"
            android:layout_marginLeft="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/jenisKelamin"
                android:gravity="center">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lakiLaki"
                    android:text="Laki-laki"
                    android:layout_gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="50dp"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/perempuan"
                    android:text="Perempuan"
                    android:layout_alignParentRight="true" />

            </RadioGroup>

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wargaNegara"
                android:layout_gravity="center_horizontal"
                android:hint="Warga Negara *"
                android:elegantTextHeight="false"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noTelp"
                android:inputType="number"
                android:layout_gravity="center_horizontal"
                android:hint="No. Telepon *"
                android:elegantTextHeight="false"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Agama *"
        android:textColorHint="@color/colorAccent"
        app:theme="@style/AppTheme.Spinner"
        android:id="@+id/agama"
        app:met_floatingLabel="normal"
        android:layout_margin="12dp"
        android:layout_gravity="center" />


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pendidikan *"
        android:textColorHint="@color/colorAccent"
        app:theme="@style/AppTheme.Spinner"
        android:id="@+id/pendidikan"
        app:met_floatingLabel="normal"
        android:layout_margin="12dp"/>

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pekerjaan *"
        android:textColorHint="@color/colorAccent"
        app:theme="@style/AppTheme.Spinner"
        android:id="@+id/pekerjaan"
        app:met_floatingLabel="normal"
        android:layout_margin="12dp"/>

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Golongan Darah *"
        android:textColorHint="@color/colorAccent"
        app:theme="@style/AppTheme.Spinner"
        android:id="@+id/golonganDarah"
        app:met_floatingLabel="normal"
        android:layout_margin="12dp"/>

    </LinearLayout>




    </ScrollView>

</LinearLayout>