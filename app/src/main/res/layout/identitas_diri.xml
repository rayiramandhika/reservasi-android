<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="#FFF"
    style="@style/AppTheme.AddPasien">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noID"
                android:layout_gravity="center_horizontal"
                android:hint="No. ID/SIM"
                android:elegantTextHeight="false"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noRekamMedik"
                android:layout_gravity="center_horizontal"
                android:hint="No. Rekam Medik"
                android:elegantTextHeight="false"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nama"
            android:layout_gravity="center_horizontal"
            android:hint="Nama Lengkap"
            android:elegantTextHeight="false"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tempatLahir"
            android:layout_gravity="center_horizontal"
            android:hint="Tempat Lahir"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp">

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tanggal"
            android:textColorHint="@color/colorAccent"
            app:theme="@style/AppTheme.Spinner"
            android:id="@+id/tanggalLahir"
            app:met_floatingLabel="normal"
            android:layout_marginRight="20dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:gravity="left"
            android:minWidth="100dp"
            android:layout_marginTop="14dp" />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Bulan"
            android:textColorHint="@color/colorAccent"
            app:theme="@style/AppTheme.Spinner"
            android:id="@+id/bulanLahir"
            app:met_floatingLabel="normal"
            android:layout_marginRight="20dp"
            android:minWidth="120dp"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true" />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tahun"
            android:textColorHint="@color/colorAccent"
            app:theme="@style/AppTheme.Spinner"
            android:id="@+id/tahunLahir"
            app:met_floatingLabel="normal"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="false"
            android:minWidth="100dp"
            android:layout_marginTop="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tanggal Lahir"
                android:id="@+id/textView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Jenis Kelamin"
            android:layout_marginLeft="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/jenisKelamin"
                android:gravity="center">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lakiLaki"
                    android:text="Laki-laki"
                    android:layout_gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="50dp"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/perempuan"
                    android:text="Perempuan"
                    android:layout_alignParentRight="true" />

            </RadioGroup>

        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/umur"
            android:hint="Umur"
            android:elegantTextHeight="false"
            android:maxLines="1"
            android:layout_margin="12dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wargaNegara"
                android:layout_gravity="center_horizontal"
                android:hint="Warga Negara"
                android:elegantTextHeight="false"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noTelp"
                android:layout_gravity="center_horizontal"
                android:hint="No. Telfon"
                android:elegantTextHeight="false"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Agama"
        android:textColorHint="@color/colorAccent"
        app:theme="@style/AppTheme.Spinner"
        android:id="@+id/agama"
        app:met_floatingLabel="normal"
        android:layout_margin="12dp"
        android:layout_gravity="center" />


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pendidikan"
        android:textColorHint="@color/colorAccent"
        app:theme="@style/AppTheme.Spinner"
        android:id="@+id/pendidikan"
        app:met_floatingLabel="normal"
        android:layout_margin="12dp"/>

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pekerjaan"
        android:textColorHint="@color/colorAccent"
        app:theme="@style/AppTheme.Spinner"
        android:id="@+id/pekerjaan"
        app:met_floatingLabel="normal"
        android:layout_margin="12dp"/>

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Golongan Darah"
        android:textColorHint="@color/colorAccent"
        app:theme="@style/AppTheme.Spinner"
        android:id="@+id/golonganDarah"
        app:met_floatingLabel="normal"
        android:layout_margin="12dp"/>

    </LinearLayout>




    </ScrollView>

</LinearLayout>